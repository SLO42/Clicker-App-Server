{
	"name": "typescript-backend",
	"version": "1.0.0",
	"engines": {
		"node": "17.5"
	},
	"description": "initial go at creating a typescript server for my clicker game.",
	"main": "src/server.js",
	"scripts": {
		"build": "rm -rf dist && tsc -p tsconfig.build.json",
		"docker-up": "docker compose --file ./docker/docker-compose.yml up",
		"docker-confirm-delete": "docker compose --file ./docker/docker-compose.yml down",
		"start": "NODE_ENV=production node -r dotenv/config dist/server.js",
		"dev": "NODE_ENV=dev nodemon --watch 'src/**/*.{js,ts}' --exec 'ts-node -r dotenv/config -T' src/server.ts",
		"db:migrate": "knex migrate:latest",
		"db:migrate:down": "knex migrate:down",
		"db:refresh": "knex migrate:down && knex migrate:latest",
		"build:refresh-dev": "npm run build && NODE_ENV=dev npm run db:refresh",
		"lint": "eslint '{src,test}/**/*.{js,ts,tsx}'",
		"test": "NODE_ENV=test node -r dotenv/config --experimental-vm-modules node_modules/.bin/jest --runInBand --coverage",
		"prepare": "husky in stall"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"author": "SLO42",
	"license": "ISC",
	"dependencies": {
		"axios": "^0.26.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-jsdoc-swagger": "^1.6.7",
		"express-validator": "^6.14.0",
		"google-auth-library": "^7.14.0",
		"helmet": "^5.0.2",
		"knex": "^1.0.3",
		"knex-paginate": "^3.0.0",
		"passport": "^0.5.2",
		"passport-custom": "^1.1.1",
		"passport-google-oauth2": "^0.2.0",
		"passport-google-one-tap": "^1.0.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"pg": "^8.7.3",
		"redis": "^4.0.3",
		"regenerator-runtime": "^0.13.9",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5"
	},
	"devDependencies": {
		"@babel/plugin-proposal-export-default-from": "^7.16.7",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-typescript": "^7.16.7",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.19",
		"@types/passport-google-oauth2": "^0.1.4",
		"@types/passport-jwt": "^3.0.6",
		"@types/passport-local": "^1.0.34",
		"@types/pg": "^8.6.4",
		"@types/redis": "^4.0.11",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"husky": "^7.0.0",
		"jest": "^27.5.1",
		"jsdoc": "^3.6.10",
		"nodemon": "^2.0.15",
		"prettier": "2.5.1",
		"pretty-quick": "^3.1.3",
		"superagent": "^7.1.1",
		"supertest": "^6.2.2",
		"ts-loader": "^9.2.6"
	}
}
